{{> partials/header.hbs }}

{{#with statement}}
    <div id="main-content">
        <div class="row" style="margin-top: 30px;">
            <h2>Edit Statement</h2>
        </div>

        <div class="collapsed bg-none">
            <div class="row">
                <article class="profile feed-item" itemscope="itemscope" itemtype="http://schema.org/Person">
                    <form action="/create-new-statement" method="get">
                        <input hidden name="statementId" value="{{id}}" id="statementId">
                        <div class="content">
                            Title: <input id="title" name="title" style="width: 90%" type="text" value="{{title}}">
                            Text: <textarea id="text" name="text" rows="15" style="width: 65%">{{& text}}</textarea>
                        </div>

                        <input type="submit" class="button" value="Submit"/>
                    </form>
                </article>
            </div>
        </div>
    </div>
{{/with}}

{{> partials/footer.hbs }}